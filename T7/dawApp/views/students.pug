extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
        h3.w3-right
          a(href='/students/registar') Registar Estudante
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git
              th
              th
              th
            each s in list
              tr
                td= s.numero
                td= s.nome
                td= s.git
                td 
                  a(href=`/students/${s.numero}`) Visitar página
                td
                  a(href=`/students/editar/${s.numero}`) Editar informações
                td
                  form.w3-container(action=`/students/${s.numero}`,method='Post')
                    input(type="hidden" name="_method" value="DELETE")
                    input.w3-btn.w3-blue-grey(type="submit" value="Apagar")
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, df
